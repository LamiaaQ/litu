<div align="center">
  <div class="col-8">

<div style="text-align: right; direction: rtl;">
  <br>
<form action="/users/<%=user._id%>/update?_method=PUT" method="post">

  <h4>تحديث المعلومات الشخصية:</h4> <br>
    <div class="form-group">
        <label>الإسم </label>
        <input type="text" class="form-control" name="name" value="<%=user.name%>">
      </div>

      <div class="form-group">
        <label>تاريخ الميلاد:</label>
        <input type="text" class="form-control" name="DOB" value="<%=user.DOB.toDateString()%>">
      </div>

      <div class="form-group">
        <label>البريد الإلكتروني:</label>
        <input type="email" class="form-control" name="email" value="<%=user.email%>">
      </div>

      <div class="form-group">
        <label>القسم:</label>
        <input type="text" class="form-control" name="department" value="<%=user.department%>">
      </div>

      <label>الجنس:</label>
      <select class="form-control" name="gender">
        <option value="true">أنثى</option>
        <option value="false">ذكر</option>
      </select> <br>
    </div>
    <div style="text-align: left;">
      
      <button type="submit" class="btn btn-primary" align="left">تحديث</button>
    </div>

</form>
</div>
</div>