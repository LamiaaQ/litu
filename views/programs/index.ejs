<div align="center">
  <div class="col-8">
<div class="container" style="margin-top: 10%;">

  <div style="text-align: left;">
    <a class="btn btn-primary" href="/programs/new"> إضافة برنامج</a>
  </div> <br> <br>

    <table class="table">
        <thead>
          <tr>
            <th scope="col-sm">العنوان</th>
            <th scope="col-sm">الوصف</th>
            <th scope="col-sm">الإجراءات</th>
          </tr>
        </thead>
        <tbody>
            <% programs.forEach(program=>{ %>
          <tr>
            <td><%=program.title%></td>
            <td><%=program.description%></td>
            <td class="text-center">
                  <a style = "text-decoration:none;" class ="btn btn-light btn-sm" href="/programs/<%= program._id%>/show">عرض</a>
                  <a style = "text-decoration:none;" class ="btn btn-light btn-sm" href="/programs/<%= program._id%>/edit">تعديل</a>
                  <a style = "text-decoration:none;" class ="btn btn-light btn-sm" href="/programs/<%= program._id%>/delete?_method=delete">حذف</a>
                
            </td>
          </tr>
            <% })%>
        </tbody>
      </table>
    
    </div>
    </div>
    </div>