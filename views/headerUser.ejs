<html lang="en">
    <head>
      <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>MeetApp</title>
        <link href="https://fonts.googleapis.com/css2?family=Russo+One&display=swap" rel="stylesheet">
        
        <style>
      * {box-sizing: border-box;}
      
      body { 
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
      }
      
      .header {
        overflow: hidden;
        background-color: #808080;
     text-decoration: bold;
      
        
      }
      
      .header a {
        float: right;
        color: #50758e;
        text-align: center;
        padding: 15px;
        text-decoration: none;
        font-size: 18px; 
        line-height: 30px;
        border-radius: 4px;
      }
      
      .header a.logo {
        font-size: 25px;
        font-weight: bold;
      }
      
      .header a:hover {
        background-color: #ddd;
        color: #6b9cbd;
      }
      
      .header a.active {
        background-color: #50758e;
        color: white;
      }
      
      .header-right {
        float: right;
        margin-top: 20px;
      }
      
      @media screen and (max-width: 500px) {
        .header a {
          float: none;
          display: block;
          text-align: left;
        }
        
        .header-right {
          float: none;
        }
      }
  
            /* Add a black background color to the top navigation */
        body{
                font-family:Georgia, serif;
            }
  .topnav {
  
  
    background-color: #82c4bb;
    overflow: hidden;
    border-radius: 10px;
    opacity: 0.7;
  }
  
  /* Style the links inside the navigation bar */
  .topnav a {
    float: left;
    color: #ffffff;
    text-decoration: none;
    font-size: 17px;
  }
  
  /* Change the color of links on hover */
  .topnav a:hover {
    background-color: #ddd;
    color: #487879;
    opacity: 0.7;
  }
  .header {
    background-color:lightgray;
  
  }
  
  /* Add a color to the active/current link */
  body{
  
      font-family: "Open Sans",sans-serif;
      text-align: center;
    }
    
    footer{
      background: #ddd;
      padding: 90px ;
  
      justify-content: center;
      text-align: center;
      opacity: 0.7;
    }
    
    .footer-container{
      align-items: center;
      text-align: center;
    }
    
    .logo{
      width: 180px;
    }
    
    .social-media{
      margin: 20px 0;
    }
    
    .social-media a{
      color: #5D87A4;
      margin-right: 25px;
      font-size: 22px;
      text-decoration: none;
      transition: .3s linear;
    }
    
    .social-media a:hover{
      color: #ddd;
    }
    
    .right-col h1{
      font-size: 26px;
    }
    
    .border{
      width: 100px;
      height: 4px;
      background: #ddd;
    }
    
    
    .txtb{
      flex: 1;
      font-size: 16px;
      color: #5D87A4;
      background: #ddd;
      border-radius: 30px;
      min-width: 260px;
    }
    
   
    .btn:hover{
      opacity: .7;
    }
    
    .page-content{
      min-height: 100vh;
      font-size: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    @media screen and (max-width:960px) {
      .footer-container{
        max-width: 600px;
      }
      .right-col{
        width: 100%;
        margin-bottom: 60px;
      }
    
      .left-col{
        width: 100%;
        text-align: center;
      }
    }
    
    @media screen and (max-width:700px){
      .btn{
        margin: 0;
        width: 100%;
        margin-top: 20px;
        }
    }
 
  
    button {
      border-radius: 10px;
      background-color: #5D87A4;
      opacity:0.7 ;
      color: white;
      padding: 15px 32px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 21px;
    }
    input[type=text],textarea  {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      box-sizing: border-box;
      font-size: 21px;
      font-style:bold;
  }
  
  input[type=url]{
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      box-sizing: border-box;
      font-size: 21px;
      font-style:bold;
  }

  h2 {
    color : black
  }
        </style>
  
  </head>
  <body>
  
  <div class="header"  style="text-decoration: bold;">
    <a style="font-family: 'Russo One', sans-serif; text-align: left;"> 
     

      <div class="header-right" style="font-family:sans-serif;">
        <a href="/home" ><h2 style="color: black; ">/ LETU /</h2></a>

          <%if(currentUser){%>
            <%if(currentUser.isDev){%>
              
              
                    <a class="nav-link" href="/home"> الرئيسية</a>
                  
                    <a class="nav-link" href="/users/show">الملف الشخصي</a>
                  
                    <a class="nav-link" href="/bugs">التقارير</a>
                  
                    <a class="nav-link" href="/bugs/search">البحث</a>
                  
    

          <% }else{ %>
              
                  <a class="nav-link" href="/home"> الرئيسية</a>
                
                  <a class="nav-link" href="/users/show">الملف الشخصي</a>
               
                  <a class="nav-link" href="/bugs/new">إنشاء تقرير</a>
               
                  <a class="nav-link" href="/bugs/search">البحث</a>
                
           
         <%}}else{%>
                <a class="nav-link" href="/home"> الرئيسية</a>
              
          <%}%>




    </div>
    <div class="header-left" style="font-family:sans-serif;">
     <div class="col-sm" style="margin-top:15px;">
      <%if(loggedIn){%>
      <p>
        <a href="/users/logout" class="btn btn-outline-dark"  >تسجيل الخروج  </a>
        <!-- <a href="/users/show" class="btn btn-outline-dark"  ><%=currentUser.name%> :مرحبا </a> -->
        
      </p>
      <%}else{%>
        <a href="/users/login" class="btn btn-outline-dark">تسجيل الدخول</a>
      <%}%>
  </div>
</div>
  </div>
    </body>
    </html>