<form action="/bugs/<%=bug._id%>/update?_method=PUT" method="post">

    <div class="form-group">
        <label>Title: </label>
        <input type="text" class="form-control" name="title" value="<%=bug.title%>">
      </div>

      <div class="form-group">
        <label>Description</label>
        <textarea name="description" class="form-control" cols="30" rows="10"><%=bug.description%></textarea>
      </div>

      <label>priority:</label>
      <select class="form-control" name="priority">
        <option value="low">low</option>
        <option value="medium">medium</option>
        <option value="high">high</option>
      </select> <br>
      
      <button type="submit" class="btn btn-primary">Submit</button>

</form>